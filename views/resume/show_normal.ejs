<%- include("../partials/header") %>

<br />

<div class="container col-md-10">
  <div class="middle">
    <h1>
      <%=resume.name %>
    </h1>
    <p class="heading_resume">
      <% resume.accountLinks.forEach(function(links, index) { %>
        <a href="<%= links.link %>" style="color: black;text-transform: capitalize;">
          <%= links.linkTitle %>
        </a>


        <% }); %>
    </p>
    <!-- <p class="heading_resume">
      <i class="fas fa-university"> &nbsp<%=resume.University_Name %></i>
    </p> -->
    <p class="heading_resume">
      <i class="fas fa-envelope"> &nbsp <%=resume.email %> &nbsp</i> | &nbsp
      <i class="fas fa-phone-alt"> &nbsp <%=resume.contact %></i>
    </p>
  </div>

  <hr class="hr_head" />

  <h4 class="headings">Education</h4>
  <table class="education">
    <!-- <tr>
      <th>Degree Name</th>
      <th>Year Of Passing</th>
      <th>Organization Name</th>
      <th>CGPA</th>
    </tr> -->
    <% resume.education.forEach(function(edu, index) { %>
          
      <tr>
        <td>
          <%=edu.degreeName%>
        </td>
        <td>
          <%=edu.passingYear%>
        </td>
        <td>
          <%=edu.instituteName%>
        </td>
        <td>
          <%=edu.percentage%>
        </td>
      </tr>



      <% }); %>
  </table>
  <br />

  <h4 class="headings">Languages and Skill</h4>
  <ul>
    <% resume.skills.forEach(function(skill, index) { %>
      <li class="proj_heading">
        <%= skill.skillName %>

      </li>
      <li style="list-style-type: none">
        <%= skill.description %>
      </li>

      <% }); %>
  </ul>
  <h4 class="headings">Projects</h4>
  <ul style="font-size: 15px">
    <% resume.personalProjects.forEach(function(project, index) { %>
      <li class="proj_heading">
        <%= project.name %>
          <a href="<%= project.link %>" style="color: black">
            <i class="fas fa-external-link-square-alt"></i>
          </a>
      </li>
      <li style="list-style-type: none">
        <%= project.description %>
      </li>

      <!-- Add other fields related to the project here -->
      <% }); %>
  </ul>
  <br />
  <h4 class="headings">Work Projects</h4>
  <ul style="font-size: 15px">
    <% resume.work_projects.forEach(function(project, index) { %>
      <li class="proj_heading">
        <%= project.projectName %>
        <a href="<%= project.link %>" style="color: black">
          <i class="fas fa-external-link-square-alt"></i>
        </a>
      </li>
      <li style="list-style-type: none"><%= project.description %></li>
      <li><strong>Duration:</strong> <%= project.duration %></li>
      <!-- Add other fields related to the project here -->
    <% }); %>
  </ul>
  <br />
  <h4 class="headings">Achievements</h4>

  <ul>
    <ul>
      <% resume.achievements.forEach(function(achievement, index) { %>
        <li class="achievement">
          <%= achievement %>
        </li>
        <% }); %>
    </ul>
  </ul>
  <br />
  <h4 class="headings">Hobbies</h4>
  <ul>
    <% resume.hobbies.forEach(function(hobby, index) { %>
      <li class="hobby">
        <%= hobby %>
      </li>
      <% }); %>
  </ul>

  <br />
  <h5>
    I hereby declare that the details furnished above are true and correct to
    the best of my knowledge and belief.
  </h5>
  <br />
  <a class="btn btn-md btn-success" href="/resume"
    ><i class="fa fa-arrow-left"></i> &nbsp Go Back</a
  >

  <a class="btn btn-md btn-primary" href="/resume/normal/<%= resume._id%>/edit">
    <i class="fas fa-edit"></i> &nbsp Edit Resume</a
  >

  <button class="btn btn-md btn-danger">
    <i class="fa fa-download"></i>
    <a href="/resume/normal/<%= resume._id%>/download" class="makewhite"
      >Download Preview</a
    >
  </button>
  <button class="btn btn-md btn-dark">
    <a href="/resume/pro/<%= resume._id%>" class="makewhite"
      ><i class="fa fa-code-branch"></i> &nbsp Pro Version</a
    >
  </button>
  <br />
  <br />
  <form action="/resume/normal/<%=resume._id %>?_method=DELETE" method="POST">

    <br />
    <br />
    <form action="/resume/normal/<%=resume._id %>?_method=DELETE" method="POST">
      <button class="btn btn-md btn-danger">
        <i class="fa fa-trash"></i> &nbsp Delete
      </button>
    </form>
    <br />
    <br />
  </div>
  
  <%- include("../partials/footer") %>
